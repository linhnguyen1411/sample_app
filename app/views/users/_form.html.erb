<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name, t("static_pages.new.name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, t("static_pages.new.email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, t("static_pages.new.password") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t("static_page.new.confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit t("static_pages.users_page.save_changes"), class: "btn btn-primary" %>
<% end %>
