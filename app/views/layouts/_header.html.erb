<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.menu_home"), root_path %></li>
        <li><%= link_to t("static_pages.menu_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "static_pages.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.profile"), current_user %></li>
              <li><%= link_to t("static_pages.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("static_pages.about"), about_path %></li>
        <li><%= link_to t("static_pages.contact"), contact_path %></li>
      </ul>
    </nav>
  </div>
</header>
