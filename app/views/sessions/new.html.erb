<% provide(:title, t("static_pages.login")) %>
<h1><%= t("static_pages.login")%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t("static_pages.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("static_pages.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("static_pages.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "static_pages.new_user" %> <%= link_to t("static_pages.sign_up_now"), signup_path %></p>
  </div>
</div>
